{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    {
      "src": "/sitemap\\.xml",
      "dest": "/api/sitemap.xml"
    },
    { "src": "/.*", "dest": "/index.html" }
  ]
}
