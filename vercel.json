{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "rewrites": [
 
    {
      "source": "/sitemap.xml",
      "destination": "/sitemap.xml"
    },

    {
      "source": "/(.*)",
      "destination": "/"
    }
  ],
  "headers": [
   
    {
      "source": "/sitemap.xml",
      "headers": [
        { "key": "Content-Type",  "value": "application/xml" },
        { "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" }
      ]
    }
  ]
}
